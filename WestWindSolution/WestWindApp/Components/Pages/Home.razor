@page "/"
<PageTitle>Home</PageTitle>

<!-- Additional Namespaces-->
@using WestWindSystem.BLL
@using WestWindSystem.Entities

<h1>Hello, world!</h1>

Welcome to your new app.

<p>WestWind Database Version: Major @buildVersion.Major: Minor: @buildVersion.Minor
    Build: @buildVersion.Build Version Date: @buildVersion.ReleaseDate.ToString("MMM dd, yyyy")</p>

@code {
    private BuildVersion buildVersion { get; set; }

    //inject the BuildVersion services
    [Inject]
    public BuildVersionServices _buildVersionServices { get; set; }

    protected override void OnInitialized()
    {
        //execute the default setup for the page
        base.OnInitialized();

        //custom setup
        //execute the BLL service to obtain your database record(s)
        buildVersion = _buildVersionServices.BuildVersion_Get();
    }
}